
@{
    ViewBag.Title = "Service Providers";
    Layout = "~/Views/Shared/Admin/_SuperAdminLayout.cshtml";
}

<div class="row">

    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <ol class="breadcrumb breadcrumb-bg-pink">
                <li><a href="@Url.Action("dashboard", "admin")"><i class="material-icons">dashboard</i> Dashboard</a></li>
                <li class="active"><i class="material-icons">local_laundry_service</i> Service Providers</li>
            </ol>
        </div>
    </div>

    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header">
                <h2>Service Providers</h2>
                <ul class="header-dropdown m-r--5">
                    <li class="dropdown">
                        <a class="btn bg-deep-purple waves-effect hover-expand-effect" href="@Url.Action("new-service-provider", "admin")">
                            <i class="material-icons">plus_one</i>
                            <span>New</span>
                        </a>
                    </li>
                </ul>
            </div>
            <div class="body">

                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Name</th>
                                <th>Home Page</th>
                                <th>Show</th>
                                <th>Contact Page</th>
                                <th>Show</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tfoot>
                            <tr>
                                <th>ID</th>
                                <th>Name</th>
                                <th>Home Page</th>
                                <th>Show</th>
                                <th>Contact Page</th>
                                <th>Show</th>
                                <th>Action</th>
                            </tr>
                        </tfoot>
                        <tbody>
                            @for (var itemCount = 0; itemCount < ViewBag.ServiceProviders.Count; itemCount++)
                            {

                                <tr>
                                    <td>@ViewBag.ServiceProviders[itemCount].Id</td>
                                    <td>@ViewBag.ServiceProviders[itemCount].Name</td>
                                    <td>@ViewBag.ServiceProviders[itemCount].VisibleText</td>
                                    @if (ViewBag.ServiceProviders[itemCount].ShowOnHomePage == true)
                                    {
                                        <td><i class="material-icons true-icon">check</i></td>
                                    }
                                    else
                                    {
                                        <td><i class="material-icons false-icon">close</i></td>
                                    }
                                    <td>@ViewBag.ServiceProviders[itemCount].ContactUsPageText</td>
                                    @if (ViewBag.ServiceProviders[itemCount].ShowOnContactPage == true)
                                    {
                                        <td><i class="material-icons true-icon">check</i></td>
                                    }
                                    else
                                    {
                                        <td><i class="material-icons false-icon">close</i></td>
                                    }
                                    <td>
                                        <a href="~/admin/edit-service-provider/@ViewBag.ServiceProviders[itemCount].Id" class="btn bg-purple waves-effect hover-expand-effect"><i class="material-icons">mode_edit</i></a>
                                        <a href="~/admin/DeleteServiceProvider/@ViewBag.ServiceProviders[itemCount].Id" class="btn bg-pink waves-effect hover-expand-effect"><i class="material-icons">delete_forever</i></a>
                                    </td>
                                </tr>
                            }


                        </tbody>
                    </table>
                </div>

            </div>
        </div>
    </div>

</div>

<script type="text/javascript">

    $(document).ready(function () {
        $(".dummy_AllServiceProviders_link").addClass("active");
        setTimeout(function () {
            if ('@ViewBag.SuccessMessage' != null && '@ViewBag.SuccessMessage' != '') {
                ShowAjaxNotificationMessage("Success", '@ViewBag.SuccessMessage', "success");
            }

            if ('@ViewBag.ErrorMessage' != null && '@ViewBag.ErrorMessage' != '') {
                ShowAjaxNotificationMessage("Oops!", '@ViewBag.ErrorMessage', "warning");
            }

        }, 1000);

    })

</script>

