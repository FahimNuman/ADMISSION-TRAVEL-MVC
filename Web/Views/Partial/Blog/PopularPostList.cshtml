<div class="popular-posts widget widget__sidebar" id="recent-posts-4">
    <h3 class="widget-title"><span>Latest News</span></h3>
    <div class="widget-content">
        <ul class="posts-list unstyled clearfix">
            @if (ViewBag.PopularPostList != null && ViewBag.PopularPostList.Count > 0)
            {
                for (int i = 0; i < ViewBag.PopularPostList.Count; i++)
                {
                    <li>
                        <figure class="featured-thumb">
                            <a href="~/blog/details/@ViewBag.PopularPostList[i].PostId">
                                <img width="80" height="53" alt="@ViewBag.PopularPostList[i].Title" src="@Url.Content("~" + ViewBag.PopularPostList[i].FeaturedImagePath)">
                            </a>
                        </figure>
                        <!--featured-thumb-->
                        <h4><a title="Pellentesque posuere" href="~/blog/details/@ViewBag.PopularPostList[i].PostId">@ViewBag.PopularPostList[i].Title</a></h4>
                        <p class="post-meta">
                            <i class="icon-calendar"></i>
                            <time datetime="2014-07-10T07:09:31+00:00" class="entry-date">@ViewBag.PopularPostList[i].CreatedDate.ToString("dd MMM yyyy")</time>
                        </p>
                    </li>
                }
            }
            else
            {
                <li>
                    No news
                </li>
            }



        </ul>
    </div>
    <!--widget-content-->
</div>

<div class="block block-company">
    <div class="block-title">Admission Travel</div>
    <div class="block-content">
        <ol id="recently-viewed-items">
            <li class="item even"><a title="Buy Ticket" href="@Url.Action("student-service", "agency")">Buy Ticket</a></li>
            <li class="item  odd"><a href="@Url.Action("privacy-policy", "agency")" title="Privacy Policy">Privacy Policy</a></li>
            <li class="item even"><a title="News" href="@Url.Action("Index", "blog")">News</a></li>
            <li class="item last"><a href="@Url.Action("feedback", "agency")" title="Feedback">Feedback</a></li>
        </ol>
    </div>
</div>