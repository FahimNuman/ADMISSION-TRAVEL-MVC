                        <div class="holder">
                            <div class="thumb"> <img src="@Url.Content("~" + ViewBag.FeedbackSlider[itemCount].ImagePath)" alt="@ViewBag.FeedbackSlider[itemCount].AuthorName)"> </div>
                            <p>@ViewBag.FeedbackSlider[itemCount].SortDescription</p>
                            <div class="line"></div>
                            <strong class="name">@ViewBag.FeedbackSlider[itemCount].AuthorName</strong>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
