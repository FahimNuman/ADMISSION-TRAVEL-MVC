

<div class="custom-slider-wrap">
    <div class="custom-slider-inner">
        <div class="home-custom-slider">
            <div>
                <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
                    <ol class="carousel-indicators">
                        @for (var itemCount = 0; itemCount < ViewBag.AdvertismentSlider.Count; itemCount++)
                        {
                            <li class="listed-child" data-target="#carousel-example-generic" data-slide-to="@itemCount"></li>
                        }
                    </ol>
                    <div class="carousel-inner">
                        @for (var itemCount = 0; itemCount < ViewBag.AdvertismentSlider.Count; itemCount++)
                        {
                            <div class="item listed-child">
                                <img src="@Url.Content("~" + ViewBag.AdvertismentSlider[itemCount].ImagePath)" alt="@ViewBag.AdvertismentSlider[itemCount].Caption">
                                <div class="carousel-caption">
                                    <span>@ViewBag.AdvertismentSlider[itemCount].Name</span>
                                    <p>@ViewBag.AdvertismentSlider[itemCount].SortDescription</p>
                                </div>
                            </div>
                        }
                    </div>
                    <a class="left carousel-control" href="#" data-slide="prev"> <span class="sr-only">Previous</span> </a> <a class="right carousel-control" href="#" data-slide="next"> <span class="sr-only">Next</span> </a>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="hot-deal">
