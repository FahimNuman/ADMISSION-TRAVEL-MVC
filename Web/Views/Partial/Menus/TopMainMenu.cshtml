<div class="container">
    <div class="row">
        <div class="col-lg-3 col-md-3 col-sm-3 col-xs-12 logo-block">
            <!-- Header Logo -->
            <div class="logo">
                <a title="Linea HTML Template" href="@Url.Action("Index", "Home")">
                    @if (ViewBag.SiteSetting.LogoURL != "")
                    {
                        <img alt="Linea HTML" src="@Url.Content("~/"+ViewBag.SiteSetting.LogoURL)">
                    }
                    else
                    {
                        <img alt="Linea HTML" src="@Url.Content("~/images/logo.png")">
                    }

                </a>
            </div>
            <!-- End Header Logo -->
        </div>
        <div class="col-lg-9 col-md-9 col-sm-9 col-xs-12">
            <div class="navbar navbar-default bus-main-menu">
                <!-- Brand and toggle get grouped for better mobile display -->
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                </div>

                <!-- Collect the nav links, forms, and other content for toggling -->
                <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                    <ul class="nav navbar-nav">
                        <li class="active"><a href="@Url.Action("Index", "home")">Home</a></li>
                        <li class="active"><a href="@Url.Action("student-service", "agency")">Buy Ticket</a></li>
                        <li class="active"><a href="@Url.Action("our-agents", "agency")">Agents</a></li>
                        <li class="active"><a href="@Url.Action("about-us", "agency")">About Us</a></li>
                        <li class="active"><a href="@Url.Action("question-answer", "agency")">Faq</a></li>
                        <li class="active"><a href="@Url.Action("feedback", "agency")">Feedback</a></li>
                        <li class="active"><a href="@Url.Action("contact-us", "agency")">Contact Us</a></li>

                    </ul>
                </div><!-- /.navbar-collapse -->
            </div>
        </div>
    </div>
</div>

<nav class="hidden-xs">
    <div class="nav-container">
        <div class="container">
            <div class="our-features-box">
                <div class="features-block">
                    <marquee onmouseover="this.stop();" onmouseout="this.start();" scrollamount="2">@Html.Raw(HttpUtility.HtmlDecode(ViewBag.SiteSetting.HeaderContactInfo))</marquee>
                </div>
            </div>
        </div>
    </div>
</nav>